<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <header>
      <h1>Articles</h1>
     
    </header>

    <main>

      <section>

        <ul>
          <% for(let i = 0; i < articles.length; i++){ %>
            <li>
              <a href="/articles/<%=articles[i]._id%>"><%=articles[i].title%></a>
            </li>
          <% } %>
        </ul>
      </section>
      <% if(isLogged) { %>
        <a href="/articles/new">new article</a>
      <% } %>
    </main>
  </body>
</html>